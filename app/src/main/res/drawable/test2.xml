<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Summer">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FF6600" />
            <stroke
                android:width="2dp"
                android:color="#FFCC80" />
            <corners
                android:radius="7dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#FFCC80"
                android:endColor="#FF6600"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#FFCC80" />
            <corners
                android:radius="7dp" />

        </shape>
    </item>
</selector>