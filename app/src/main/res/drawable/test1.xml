<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/USSR">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#5A0000" />
            <stroke
                android:width="2dp"
                android:color="#FF3D00" />
            <corners
                android:radius="7dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#FF0000"
                android:endColor="#5A0000"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#FF3D00" />
            <corners
                android:radius="7dp" />

        </shape>
    </item>
</selector>